<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaInicial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-97dp"
        tools:layout_editor_absoluteY="-331dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/pacman" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ingrese su nombre:"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <EditText
            android:id="@+id/lblNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0E31F1"
            android:ems="10"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/txtEspera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:visibility="invisible"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="32dp"
                android:text="Esperando oponente..." />
    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.PacmanV11.AppBarOverlay"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>